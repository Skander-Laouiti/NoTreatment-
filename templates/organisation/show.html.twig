{% extends 'baseback.html.twig' %}

{% block title %}Organisation{% endblock %}

{% block content %}
<style>
    {# Include an external stylesheet #}
    @import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap');

    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6A0DAD;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        background-color: #fff;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }

    th {
        background-color: #6A0DAD;
        color: #fff;
        font-weight: 500;
    }

    td {
        background-color: #f9f9f9;
    }

    .btn-primary {
        background-color: #6A0DAD;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
    }

    .btn-primary:hover {
        background-color: #4E0A73;
    }

    .btn-edit {
        color: #6A0DAD;
        text-decoration: none;
        margin-left: 10px;
    }

    .btn-edit:hover {
        text-decoration: underline;
    }

    .delete-form {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h1>Organisation Details</h1>

    <table>
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ organisation.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ organisation.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ organisation.email }}</td>
            </tr>
            <tr>
                <th>Numéro de Téléphone</th>
                <td>{{ organisation.numTel }}</td>
            </tr>

{% if organisation.image != null %}
<tr>
                <th>Image</th>
           <td>  <img src="{{ asset('uploads/orgs/' ~ organisation.image) }}" alt="Organisation Image"  style="max-height: 200px; max-width: 200px; border-radius: 5px;"> </td>
</tr>
{% endif %}
        </tbody>
    </table>
    <center>
    <div class="col-md-8 wow fadeIn" data-wow-delay="0.1s">
    <iframe class="position-relative rounded w-100"
        src="https://maps.google.com/maps?q={{ organisation.adresse }}&amp;ie=UTF8&amp;iwloc=&amp;output=embed"
        frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
        tabindex="0"></iframe>
</div>
    </center>

<center>
    <a href="{{ path('app_organisation_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_organisation_edit', {'id': organisation.id}) }}" class="btn btn-primary">Edit</a>
<br> <br>
    {{ include('organisation/_delete_form.html.twig') }}
    </center>
</div>
{% endblock %}